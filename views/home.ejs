<!DOCTYPE html>
<html lang="<%= lang %>" dir="<%= dir %>">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#6c5ce7">
    <link rel="apple-touch-icon" href="/img/logo.png">
    <link rel="icon" type="image/png" href="/img/logo.png">


    <title><%- t.meta.title %></title>
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=SUSE:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/admin-style.css" />
    <style>
      /* --- Landing Page Specific Styles --- */

      /* 1. Navbar */
      .landing-nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem 3rem;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 100;
        /* Default Dark Glass */
        background: rgba(15, 23, 42, 0.6); 
        backdrop-filter: blur(12px);
        border-bottom: 1px solid var(--glass-border);
        transition: background 0.3s ease;
      }

      /* Light Mode Navbar Override */
      [data-theme='light'] .landing-nav {
        background: rgba(255, 255, 255, 0.85); /* White Glass */
        border-bottom: 1px solid rgba(0,0,0,0.05);
      }

      .nav-logo {
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 1.5rem;
        font-weight: 800;
        /* FIXED: Use variable instead of #fff */
        color: var(--text-main); 
        text-shadow: 0 0 20px var(--primary-glow);
      }

      .nav-links {
        display: flex;
        align-items: center;
        gap: 2rem;
      }

      .nav-links a {
        color: var(--text-muted);
        text-decoration: none;
        font-weight: 500;
        transition: 0.3s;
      }

      .nav-links a:hover {
        color: var(--text-main); /* FIXED: Use variable */
      }

      /* 2. Hero Section */
      .hero {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 0 2rem;
        position: relative;
      }

      /* Glowing Blobs */
      .hero::before {
        content: '';
        position: absolute;
        top: 20%;
        left: 20%;
        width: 400px;
        height: 400px;
        background: var(--primary);
        filter: blur(150px);
        opacity: 0.2;
        border-radius: 50%;
        z-index: -1;
        animation: pulseBlob 8s infinite alternate;
      }

      .hero::after {
        content: '';
        position: absolute;
        bottom: 20%;
        right: 20%;
        width: 300px;
        height: 300px;
        background: var(--success);
        filter: blur(120px);
        opacity: 0.15;
        border-radius: 50%;
        z-index: -1;
        animation: pulseBlob 10s infinite alternate-reverse;
      }

      .hero-content {
        max-width: 800px;
        z-index: 2;
      }

      .hero h1 {
        font-size: 4rem;
        font-weight: 900;
        line-height: 1.1;
        margin-bottom: 1.5rem;
        /* FIXED: Use variable */
        color: var(--text-main); 
        text-transform: uppercase;
        letter-spacing: -2px;
      }

      .hero p {
        font-size: 1.25rem;
        color: var(--text-muted);
        margin-bottom: 2.5rem;
        line-height: 1.6;
      }

      .hero-btns {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
      }

      .btn-glass {
        padding: 16px 32px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid var(--glass-border);
        /* FIXED: Use variable instead of #fff so it turns dark in light mode */
        color: var(--text-main); 
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s;
        backdrop-filter: blur(10px);
      }

      /* Light Mode Button Override */
      [data-theme='light'] .btn-glass {
        background: rgba(0, 0, 0, 0.05); /* Slight dark tint for contrast */
        border-color: rgba(0, 0, 0, 0.1);
      }

      .btn-glass:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
      }
      
      [data-theme='light'] .btn-glass:hover {
        background: rgba(0, 0, 0, 0.1);
      }

      .btn-primary-lg {
        padding: 16px 32px;
        background: linear-gradient(135deg, var(--primary), #7c3aed);
        color: white; /* Keep white because button is always purple */
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        box-shadow: 0 0 20px var(--primary-glow);
        transition: all 0.3s;
      }

      .btn-primary-lg:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 40px var(--primary-glow);
      }

      /* 3. Features Grid */
      .features {
        padding: 4rem 2rem;
        max-width: 1200px;
        margin: 0 auto;
      }

      .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
      }

      .feature-card {
        background: var(--surface-dark); /* This variable flips automatically */
        border: 1px solid var(--glass-border);
        padding: 2rem;
        border-radius: 20px;
        backdrop-filter: blur(20px);
        transition: transform 0.3s;
      }
      
      /* Light Mode Card Shadow */
      [data-theme='light'] .feature-card {
         box-shadow: 0 10px 30px -10px rgba(0,0,0,0.1);
      }

      .feature-card:hover {
        transform: translateY(-10px);
        border-color: var(--primary);
      }

      .feature-icon {
        font-size: 2.5rem;
        color: var(--primary);
        margin-bottom: 1.5rem;
        background: rgba(99, 102, 241, 0.1);
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
      }

      .feature-card h3 {
        margin-bottom: 1rem;
        font-size: 1.5rem;
        /* FIXED: Ensure text color flips */
        color: var(--text-main); 
      }

      .feature-card p {
        color: var(--text-muted);
        line-height: 1.6;
      }

      @keyframes pulseBlob {
        0% { transform: scale(1); opacity: 0.2; }
        100% { transform: scale(1.1); opacity: 0.3; }
      }

      /* Responsive Fixes */
      @media (max-width: 768px) {
        .hero h1 {
          margin-top: 100px;
          font-size: 2.5rem;
        }
        .landing-nav {
          justify-content: center;
        }
        .logo, .nav-link {
          display: none;
        }
        .features {
          margin-top: 50px; /* Reduced gap */
        }
      }
    </style>
  </head>
  <body>
    <nav class="landing-nav">
      <div class="logo">
        <i class="ph ph-pill"></i>
        <span><%- t.navbar.brand %></span>
      </div>
      
      <div style="display: flex; align-items: center; gap: 20px;">
        <div class="lang-switch">
            <a href="/lang/en" class="<%= lang === 'en' ? 'active' : '' %>">EN</a>
            <span >|</span>
            <a href="/lang/fa" class="<%= lang === 'fa' ? 'active' : '' %>">فا</a>
            <span >|</span>
            <a href="/lang/ps" class="<%= lang === 'ps' ? 'active' : '' %>">پښ</a>
        </div>

        <button id="themeToggle" class="btn-icon" style="width: 40px; height: 40px; border-radius: 50%; background: var(--surface-light); color: var(--text-main);">
                        <i class="ph ph-moon" id="themeIcon"></i>
        </button>

        <a href="#features" class="nav-link"><%- t.navbar.about %></a>
      </div>
    </nav>

    <section class="hero">
      <div class="hero-content">
        <h1><%- t.hero.title %></h1>
        <p>
          <%- t.hero.description %>
        </p>
        <div class="hero-btns">
          <a href="/admin/login" class="btn-primary-lg"><%- t.hero.adminLogin %> </a>
          <a href="/user/login" class="btn-glass user-login-btn"><%- t.hero.userLogin %></a>
        </div>
      </div>
    </section>

    <section class="features" id="features">
  <div class="features-grid">
    <div class="feature-card">
      <div class="feature-icon">
        <i class="ph ph-rocket-launch"></i>
      </div>
      <h3><%- t.features.fastDelivery.title %></h3>
      <p><%- t.features.fastDelivery.description %></p>
    </div>

    <div class="feature-card">
      <div class="feature-icon">
        <i class="ph ph-shield-check"></i>
      </div>
      <h3><%- t.features.verifiedQuality.title %></h3>
      <p><%- t.features.verifiedQuality.description %></p>
    </div>

    <div class="feature-card">
      <div class="feature-icon">
        <i class="ph ph-chart-line-up"></i>
      </div>
      <h3><%- t.features.trackGrowth.title %></h3>
      <p><%- t.features.trackGrowth.description %></p>
    </div>
  </div>
</section>
<script>
        document.addEventListener('DOMContentLoaded', () => {
            const toggleBtn = document.getElementById('themeToggle');
            const themeIcon = document.getElementById('themeIcon');
            const htmlEl = document.documentElement;

            // 1. Load Saved Theme
            const savedTheme = localStorage.getItem('theme') || 'dark';
            if (savedTheme === 'light') applyLight();
            else applyDark();

            // 2. Toggle Logic
            if(toggleBtn) {
                toggleBtn.addEventListener('click', () => {
                    const currentTheme = htmlEl.getAttribute('data-theme');
                    if (currentTheme === 'light') applyDark();
                    else applyLight();
                });
            }

            function applyLight() {
                htmlEl.setAttribute('data-theme', 'light');
                localStorage.setItem('theme', 'light');
                if(themeIcon) {
                    themeIcon.classList.replace('ph-moon', 'ph-sun');
                    themeIcon.style.color = "#f59e0b";
                }
            }

            function applyDark() {
                htmlEl.removeAttribute('data-theme');
                localStorage.setItem('theme', 'dark');
                if(themeIcon) {
                    themeIcon.classList.replace('ph-sun', 'ph-moon');
                    themeIcon.style.color = "var(--text-main)";
                }
            }
        });
    </script>

<%- include('./partials/footer') %>
