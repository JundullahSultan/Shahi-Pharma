<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Medicines | PharmaAdmin</title>
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=SUSE:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/admin-style.css">
</head>
<body>
    <div class="app-container">
        <aside class="sidebar">
            <div class="logo"><i class="ph ph-pill"></i><span>PharmaAdmin</span></div>
            <nav>
                <a href="/admin/dashboard"><i class="ph ph-squares-four"></i> Dashboard</a>
                <a href="/admin/users"><i class="ph ph-users"></i> Users</a>
                <a href="/admin/medicines" class="active"><i class="ph ph-flask"></i> Medicines</a>
                <a href="/admin/orders"><i class="ph ph-package"></i> Orders</a>
            </nav>
            <div class="logout"><a href="/admin/logout"><i class="ph ph-sign-out"></i> Logout</a></div>
        </aside>

        <main class="main-content">
            <header>
                <h1>Medicine Inventory</h1>
                <div class="user-profile"><span><%= adminName %></span><div class="avatar"><%= adminName[0].toUpperCase() %></div></div>
            </header>

            <section class="card mb-2">
                <div class="card-header">
                    <h2>Add New Medicine</h2>
                </div>
                <form class="grid-form" id="createMedicineForm">
                    <div class="form-group">
                        <label>Medicine Name</label>
                        <input type="text" name="name" placeholder="e.g. Aspirin">
                    </div>
                    <div class="form-group">
                        <label>Company</label>
                        <input type="text" name="companyName" placeholder="e.g. Bayer">
                    </div>
                    <div class="form-group">
                        <label>Price (Ø‹)</label>
                        <input type="number" name="price" step="0.01" placeholder="0.00">
                    </div>
                    <div class="form-group">
                        <label>Available in Stock</label>
                        <input type="number" name="stockQuantity" placeholder="06">
                    </div>
                    <div class="form-group">
                        <label>Upload Image</label>
                        <input type="file" name="imageURL" accept="image/*"> 
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom: 10px; display: block;">Visibility</label>
        
                        <label class="toggle-switch">
                            <input type="checkbox" name="isPublished" checked>
                            <span class="slider"></span>
                            <span class="toggle-label">Publish immediately?</span>
                        </label>
                    </div>
                    <div id="uploadProgressContainer" style="display: none; margin-bottom: 15px; width: 100%;">
                        <div style="display: flex; justify-content: space-between; margin-bottom: 5px;">
                            <span style="font-size: 0.85rem; color: var(--text-muted);">Uploading Image...</span>
                            <span id="progressText" style="font-size: 0.85rem; font-weight: bold;">0%</span>
                        </div>
                        <div style="width: 100%; height: 6px; background: var(--surface-hover); border-radius: 3px; overflow: hidden;">
                            <div id="progressBar" style="width: 0%; height: 100%; background: var(--primary); transition: width 0.2s;"></div>
                        </div>
                    </div>
                    <div class="form-group full-width">
                        <button type="submit" class="btn-primary addBtn">Add Medicine</button>
                    </div>
                </form>
            </section>

            <section class="card">
                <table>
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Company</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% medicines.forEach(med => { %>
                        <tr id="row-<%= med._id %>">
                            <td><img src="<%= med.imageURL %>" alt="Medicine" class="table-thumb"></td>
                            <td><strong><%= med.name %></strong></td>
                            <td><%= med.companyName %></td>
                            <td>$<%= med.price.toFixed(2) %></td>
                            <td>
                                <% if(med.stockQuantity >= 1) { %>
                                    <span class="text-success"><%= med.stockQuantity %> in stock</span>
                                <% } else { %>
                                    <span class="text-danger">Out of stock</span>
                                <% } %>
                            </td>
                            <td>
                                <div class="actions">
                                    <button class="btn-icon edit-btn" 
                                            title="Edit"
                                            data-id="<%= med._id %>"
                                            data-name="<%= med.name %>"
                                            data-company="<%= med.companyName %>"
                                            data-price="<%= med.price %>"
                                            data-stock="<%= med.stockQuantity %>">
                                        <i class="ph ph-pencil-simple"></i>
                                    </button>
                                    
                                    <button class="btn-icon delete-btn" 
                                            title="Delete" 
                                            data-id="<%= med._id %>">
                                        <i class="ph ph-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </section>
        </main>
    </div>
    <!-- Extra windowses -->

    <dialog id="editModal" class="custom-modal">
        <div class="modal-content" style="text-align: left; max-width: 500px;">
            <div class="card-header">
                <h2>Edit Medicine</h2>
                <button id="closeEditBtn" class="btn-text"><i class="ph ph-x"></i></button>
            </div>
            
            <form id="editMedicineForm" class="grid-form" style="grid-template-columns: 1fr; gap: 1rem;">
                <input type="hidden" name="id" id="editId">
                
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" name="name" id="editName" required>
                </div>
                <div class="form-group">
                    <label>Company</label>
                    <input type="text" name="companyName" id="editCompany" required>
                </div>
                <div class="grid-form" style="margin:0; padding:0;">
                    <div class="form-group">
                        <label>Price</label>
                        <input type="number" name="price" id="editPrice" step="0.01" required>
                    </div>
                    <div class="form-group">
                        <label>Stock</label>
                        <input type="number" name="stockQuantity" id="editStock" required>
                    </div>
                </div>
                
                <div class="form-group">
                    <label>New Image (Optional)</label>
                    <input type="file" name="imageURL" accept="image/*">
                </div>

                <button type="submit" class="btn-primary">Save Changes</button>
            </form>
        </div>
    </dialog>

    <dialog id="deleteModal" class="custom-modal">
        <div class="modal-content">
            <div class="modal-icon danger"><i class="ph ph-warning-circle"></i></div>
            <h3>Delete Medicine?</h3>
            <p>This action cannot be undone.</p>
            <div class="modal-actions">
                <button id="cancelDeleteBtn" class="btn-text">Cancel</button>
                <button id="confirmDeleteBtn" class="btn-danger">Yes, Delete</button>
            </div>
        </div>
    </dialog>
    <nav class="mobile-bottom-nav">
    <a href="/admin/dashboard" class="nav-item">
        <i class="ph ph-squares-four"></i>
        <span>Home</span>
    </a>
    
    <a href="/admin/users" class="nav-item">
        <i class="ph ph-users"></i>
        <span>Users</span>
    </a>

    <a href="/admin/medicines" class="nav-item">
        <div class="fab"><i class="ph ph-plus"></i></div>
        <span>Meds</span>
    </a>

    <a href="/admin/orders" class="nav-item">
        <i class="ph ph-package"></i>
        <span>Orders</span>
    </a>

    <a href="/admin/logout" class="nav-item">
        <i class="ph ph-sign-out"></i>
        <span>Exit</span>
    </a>
</nav>

<script>
    // This highlights the icon that matches the current page URL
    const currentPath = window.location.pathname;
    document.querySelectorAll('.mobile-bottom-nav a').forEach(link => {
        if (link.getAttribute('href') === currentPath) {
            link.classList.add('active');
        }
    });
</script>

    <script src="/js/distroyGoBack.js"></script>
    <script src="/js/admin-medicine.js"></script>
</body>
</html>