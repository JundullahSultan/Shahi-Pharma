<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Orders | PharmaAdmin</title>
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=SUSE:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/admin-style.css">
</head>

<body>


    <div class="app-container">
        <aside class="sidebar">
            <div class="logo"><i class="ph ph-pill"></i><span>PharmaAdmin</span></div>
            <nav>
                <a href="/admin/dashboard"><i class="ph ph-squares-four"></i> Dashboard</a>
                <a href="/admin/users"><i class="ph ph-users"></i> Users</a>
                <a href="/admin/medicines"><i class="ph ph-flask"></i> Medicines</a>
                <a href="/admin/orders" class="active"><i class="ph ph-package"></i> Orders</a>
            </nav>
            <div class="logout"><a href="/admin/logout"><i class="ph ph-sign-out"></i> Logout</a></div>
        </aside>

        <main class="main-content">
            <header>
                <h1>Order Management</h1>
                <div class="user-profile">
                    <span><%= adminName %></span>
                    <div class="avatar"><%= adminName ? adminName[0].toUpperCase() : 'A' %></div>
                </div>
            </header>

            <div class="filter-tabs">
                <button class="filter-btn active">All Orders</button>
                <button class="filter-btn">Pending</button>
                <button class="filter-btn">Approved</button>
                <button class="filter-btn">Cancelled</button>
            </div>

            <section class="card">
                <table>
                    <thead>
                        <tr>
                            <th>Medicine Name</th>
                            <th>Pharmacy</th>
                            <th>Items</th>
                            <th>Total Amount</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (orders && orders.length > 0) { %>
                            <% orders.forEach(order => { %>
                            <tr>
                                <td><strong><%= order.medicineId.name %></strong></td>
                                
                                <td><%= order.user?.name || 'Unknown'%></td>
                                
                                <td><%= order.quantity %> items</td>
                                
                                <td>$<%= order.price ? order.totalPrice : '0.00' %></td>

                                <% const orderDate = new Date(order.createdAt).toLocaleDateString('en-US') %>
                                
                                <td><%= orderDate %></td>
                                
                                <td><span class="badge <%= order.status.toLowerCase() %>"><%= order.status %></span></td>
                                
                                <td>
                                    <% if(order.status === 'Pending' || order.status === 'pending') { %>
                                        <div class="actions" id="actions-<%= order._id %>">
                                            <button class="btn-icon approve status-btn" 
                                                    title="Approve" 
                                                    data-id="<%= order._id %>" 
                                                    data-status="approved">
                                                <i class="ph ph-check"></i>
                                            </button>
                                            
                                            <button class="btn-icon cancel status-btn" 
                                                    title="Cancel" 
                                                    data-id="<%= order._id %>" 
                                                    data-status="cancelled">
                                                <i class="ph ph-x"></i>
                                            </button>
                                        </div>
                                    <% } else { %>
                                        <button class="btn-text">View Details</button>
                                    <% } %>
                                </td>
                            </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="7">No orders found.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </section>
        </main>
    </div>
    <nav class="mobile-bottom-nav">
    <a href="/admin/dashboard" class="nav-item">
        <i class="ph ph-squares-four"></i>
        <span>Home</span>
    </a>
    
    <a href="/admin/users" class="nav-item">
        <i class="ph ph-users"></i>
        <span>Users</span>
    </a>

    <a href="/admin/medicines" class="nav-item">
        <div class="fab"><i class="ph ph-plus"></i></div>
        <span>Meds</span>
    </a>

    <a href="/admin/orders" class="nav-item">
        <i class="ph ph-package"></i>
        <span>Orders</span>
    </a>

    <a href="/admin/logout" class="nav-item">
        <i class="ph ph-sign-out"></i>
        <span>Exit</span>
    </a>
</nav>

<script>
    // This highlights the icon that matches the current page URL
    const currentPath = window.location.pathname;
    document.querySelectorAll('.mobile-bottom-nav a').forEach(link => {
        if (link.getAttribute('href') === currentPath) {
            link.classList.add('active');
        }
    });
</script>
    <div id="toast-container"></div>
    <script src="/js/admin-orders.js"></script>
    
    <script src="/js/distroyGoBack.js"></script>

</body>
</html>